<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/lbl_statics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Statics"
        android:textSize="@dimen/text_xlarge"
        android:textStyle="bold"
        android:layout_marginHorizontal="@dimen/main_margin_horizontal"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/main_margin_horizontal"
        android:layout_marginVertical="@dimen/space_large"
        android:background="@drawable/bg_round"
        android:elevation="6dp"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/space_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_statics"
        tools:layout_editor_absoluteX="24dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/income"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/space_large"
            tools:text="Income: 40.000$" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/outcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/space_large"
            tools:text="Outcome: 40.000$" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/num_of_transactions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/space_large"
            tools:text="Number of transactions: 12" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/space_large"
            tools:text="Since last month gained 600$" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>